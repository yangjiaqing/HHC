 basa5=Serial.parseInt();
 basa6=Serial.parseInt();
 Serial.println(basa1);
 Serial.println(basa2);
 Serial.println(basa3);
 Serial.println(basa4);
 Serial.println(basa5);
 Serial.println(basa6);
 baseMove(basa2);
 armMove(basa3);
 lockMove(basa4);
 trayMove(basa5);
}
}

